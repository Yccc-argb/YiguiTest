<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="me.code.yiguitest.MainActivity">

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="测试"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="返回"
        android:visibility="visible"/>
    <Button
        android:id="@+id/bt_elec_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:text="继电器开"/>
    <Button
        android:id="@+id/bt_elec_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="70dp"
        android:text="继电器关"/>
    <Button
        android:id="@+id/bt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="160dp"
        android:layout_marginTop="70dp"
        android:text="查询id"/>
    <Button
        android:id="@+id/bt_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="70dp"
        android:text="一键开锁"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_elec_open"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="当前设备状态"
        android:textColor="#f00"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址1"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_marginLeft="20dp"
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址2"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_marginLeft="20dp"
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址3"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_marginLeft="20dp"
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址4"
            android:textSize="20sp"/>


    </LinearLayout>


    <!--<Button-->
    <!--android:id="@+id/bt_state"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginTop="40dp"-->
    <!--android:layout_marginRight="120dp"-->
    <!--android:text="查询state" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginTop="20dp"
        android:padding="10dp"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
