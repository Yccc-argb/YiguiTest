<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.code.yiguitest.PrinterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初始化"/>

        <Button
            android:id="@+id/btn_params"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参数设置"/>

        <Button
            android:id="@+id/btn_xuxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="虚线"/>

        <Button
            android:id="@+id/btn_duiqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印"/>

        <Button
            android:id="@+id/btn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"/>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回车换行"/>

        <Button
            android:id="@+id/btn_qie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切刀"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="打印机工作状态"/>

        <TextView
            android:id="@+id/tv_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="纸检测:"/>

        <TextView
            android:id="@+id/tv_work_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="工作状态:"/>

        <TextView
            android:id="@+id/tv_recive_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="接收缓冲区:"/>

        <TextView
            android:id="@+id/tv_get_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="取纸检测器:"/>

        <TextView
            android:id="@+id/tv_paper_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="纸将尽检测器:"/>

        <TextView
            android:id="@+id/tv_jitou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="机头状态:"/>

    </LinearLayout>

</LinearLayout>
